    <%= csrf_meta_tags %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>

    <link rel="apple-touch-icon" sizes="57x57" href="<%= asset_url 'favicons/apple-icon-57x57.png' %>">
    <link rel="apple-touch-icon" sizes="60x60" href="<%= asset_url 'favicons/apple-icon-60x60.png' %>">
    <link rel="apple-touch-icon" sizes="72x72" href="<%= asset_url 'favicons/apple-icon-72x72.png' %>">
